    <stylesheets>
        <URL value="@employeemgmt.css" />
    </stylesheets>
   <children>
      <TableView fx:id="user_table" layoutX="227.0" layoutY="91.0" onMouseClicked="#updateFields" prefHeight="332.0" prefWidth="451.0">
