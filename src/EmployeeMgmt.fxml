               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deactivate" prefHeight="32.0" prefWidth="243.0" text="Delete">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
