      </VBox>
      <ChoiceBox fx:id="privilegeFilter_choiceBox" layoutX="928.0" layoutY="59.0" prefHeight="25.0" prefWidth="90.0" />
      <ChoiceBox fx:id="shiftFilter_choiceBox" layoutX="836.0" layoutY="59.0" prefHeight="25.0" prefWidth="84.0" />
